{% if Pagination is not empty and Pagination.paged %}
    {% if PaginationClass is empty %}
        {% set PaginationClass = 'page-wrap' %}
    {% endif %}
    <div class="{{ PaginationClass }}">
        <ul>
            {% for PageItem in Pagination.pages %}
                <li{% if PageItem.class is not empty %} class="{{ PageItem.class }}"{% endif %}>
                    {% if PageItem.href is not empty %}<a href="{{ PageItem.href }}">{% endif %}
                        {{ PageItem.text }}
                        {% if PageItem.href is not empty %}</a>{% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}